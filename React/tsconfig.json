{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "noImplicitAny": false,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": "src",
        "composite": true,
        "types": [
            "vite/client",
            "node"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "build"
    ],
}
